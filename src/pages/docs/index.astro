---
import ContentPageLayout from "@/layouts/ContentPageLayout.astro";
import { getUrlRelativeToBase } from "@/lib/utils";
import DocsNavbar from '@/components/docs/DocsNavbar.astro';
import CTASection from '@/components/block/CTASection.astro';

const title = "Build Beautiful Docs";
const description = "Build your own Block documentation site.";

// Headings for table of contents
const headings = [
  { depth: 2, slug: "key-features", text: "Key Features" },
  { depth: 2, slug: "getting-started", text: "Getting Started" },
  { depth: 2, slug: "project-structure", text: "Project Structure" },
  { depth: 2, slug: "customization", text: "Customization" },
  { depth: 2, slug: "community-and-support", text: "Community and Support" }
];
---

<ContentPageLayout title={title} 
  description={description} 
  headings={headings} 
  maxWidth="wide"
  showTitleAsH1={false}
  showBreadcrumbs={false}>

  <DocsNavbar slot="navbar" />
    
  <CTASection
    title={title}
    tagline="Documentation Infrastructure by Block Open Source"
    taglineIconName="layers"
    description="Create stunning documentation sites for your Block projects with our modern template. Built with Astro, Tailwind CSS, and shadcn/ui components for the best developer experience."
    primaryButtonText="Get Started"
    primaryButtonHref="/docs/installation"
    primaryButtonIconName="arrow-right"
    secondaryButtonText="Components"
    secondaryButtonHref="/components"
    secondaryButtonIconName="blocks"
  />

    <h2 id="key-features" class="text-3xl font-bold mb-8">Key Features</h2>

    <div class="not-prose grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 my-8">
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
        </div>
        <h3 class="font-semibold text-lg mb-2">Built with Astro</h3>
        <p class="text-muted-foreground text-sm">Fast, modern static site generator with excellent performance and SEO optimization</p>
      </div>
      
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
        </div>
        <h3 class="font-semibold text-lg mb-2">Styled with Tailwind CSS</h3>
        <p class="text-muted-foreground text-sm">Utility-first CSS framework for rapid UI development and consistent design</p>
      </div>
      
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <rect width="7" height="7" x="3" y="3" rx="1"/>
            <rect width="7" height="7" x="14" y="3" rx="1"/>
            <rect width="7" height="7" x="14" y="14" rx="1"/>
            <rect width="7" height="7" x="3" y="14" rx="1"/>
          </svg>
        </div>
        <h3 class="font-semibold text-lg mb-2">shadcn/ui Components</h3>
        <p class="text-muted-foreground text-sm">High-quality, accessible components with beautiful design out of the box</p>
      </div>
      
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <circle cx="12" cy="12" r="4"/>
            <path d="M12 2v2"/>
            <path d="M12 20v2"/>
            <path d="m4.93 4.93 1.41 1.41"/>
            <path d="m17.66 17.66 1.41 1.41"/>
            <path d="M2 12h2"/>
            <path d="M20 12h2"/>
            <path d="m6.34 17.66-1.41 1.41"/>
            <path d="m19.07 4.93-1.41 1.41"/>
          </svg>
        </div>
        <h3 class="font-semibold text-lg mb-2">Dark Mode Support</h3>
        <p class="text-muted-foreground text-sm">Automatic and manual dark mode with smooth transitions and proper contrast</p>
      </div>
      
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14,2 14,8 20,8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
            <line x1="16" y1="17" x2="8" y2="17"/>
            <polyline points="10,9 9,9 8,9"/>
          </svg>
        </div>
        <h3 class="font-semibold text-lg mb-2">MDX Support</h3>
        <p class="text-muted-foreground text-sm">Use React components directly in your Markdown content for rich, interactive docs</p>
      </div>
      
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
        </div>
        <h3 class="font-semibold text-lg mb-2">Search & Navigation</h3>
        <p class="text-muted-foreground text-sm">Easy content discovery with built-in search and intuitive navigation</p>
      </div>
    </div>

    <h2 id="getting-started" class="text-3xl font-bold mb-8">Getting Started</h2>
    <p class="text-lg text-muted-foreground mb-8">Get up and running with your documentation site in minutes:</p>

    <div class="not-prose grid grid-cols-1 md:grid-cols-3 gap-6 my-8">
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-12 h-12 rounded-full bg-primary text-primary-foreground flex items-center justify-center mb-4 text-xl font-bold">
          1
        </div>
        <h3 class="font-semibold text-lg mb-3">Install</h3>
        <p class="text-muted-foreground text-sm mb-4">Start by following our installation guide to set up your project</p>
        <a href={getUrlRelativeToBase("/docs/installation")} class="inline-flex items-center justify-center px-4 py-2 rounded-md border border-border bg-background hover:bg-accent transition-colors no-underline text-sm">Install Now</a>
      </div>
      
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-12 h-12 rounded-full bg-primary text-primary-foreground flex items-center justify-center mb-4 text-xl font-bold">
          2
        </div>
        <h3 class="font-semibold text-lg mb-3">Configure</h3>
        <p class="text-muted-foreground text-sm mb-4">Learn how to configure the template to match your needs</p>
        <a href={getUrlRelativeToBase("/docs/configuration")} class="inline-flex items-center justify-center px-4 py-2 rounded-md border border-border bg-background hover:bg-accent transition-colors no-underline text-sm">Configure</a>
      </div>
      
      <div class="p-6 border rounded-lg bg-card hover:shadow-md transition-shadow">
        <div class="w-12 h-12 rounded-full bg-primary text-primary-foreground flex items-center justify-center mb-4 text-xl font-bold">
          3
        </div>
        <h3 class="font-semibold text-lg mb-3">Customize</h3>
        <p class="text-muted-foreground text-sm mb-4">Explore available components and customize your site</p>
        <a href={getUrlRelativeToBase("/components")} class="inline-flex items-center justify-center px-4 py-2 rounded-md border border-border bg-background hover:bg-accent transition-colors no-underline text-sm">View Components</a>
      </div>
    </div>

    <h2 id="project-structure" class="text-3xl font-bold mb-8">Project Structure</h2>
    <p class="text-lg text-muted-foreground mb-8">Understanding the project structure will help you get started quickly:</p>

    <div class="not-prose bg-muted/50 rounded-lg p-6 my-8">
      <pre class="text-sm overflow-x-auto">
<code>{`.
├── src/
│   ├── components/     # UI and documentation components
│   ├── layouts/        # Page layouts
│   ├── pages/         # Documentation pages
│   └── styles/        # Global styles
├── public/            # Static assets
├── astro.config.ts    # Astro configuration
└── package.json       # Project dependencies`}</code>
      </pre>
    </div>

    <h2 id="customization" class="text-3xl font-bold mb-8">Customization</h2>
    <p class="text-lg text-muted-foreground mb-8">This template is designed to be easily customizable:</p>

