---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getUrlRelativeToBase } from "@/lib/utils";
import CTASection from "@/components/block/CTASection.astro";
import { getUrlRelativeToBase } from "@/lib/utils";

const title = "Examples Gallery";
const description = "Showcase of documentation sites built using this project's templates, components, and design system.";

// Example sites data - replace with real examples
const exampleSites = [
  {
    title: "Block Developer Docs",
    description: "Comprehensive API documentation for Block's developer platform with interactive examples and code snippets.",
    image: "/images/examples/block-dev-docs.jpg",
    href: "https://developer.block.xyz",
    category: "API Documentation",
    tags: ["API", "Developer Tools", "Interactive"]
  },
  {
    title: "Square Point of Sale",
    description: "Product documentation and user guides for Square's point-of-sale system.",
    image: "/images/examples/square-pos.jpg", 
    href: "https://squareup.com/help/us/en/pos",
    category: "Product Documentation",
    tags: ["Product", "User Guide", "Help Center"]
  },
  {
    title: "Cash App Business",
    description: "Business documentation and integration guides for Cash App's business solutions.",
    image: "/images/examples/cashapp-business.jpg",
    href: "https://business.cash.app/docs",
    category: "Business Documentation", 
    tags: ["Business", "Integration", "Guides"]
  },
  {
    title: "Tidal Developer Portal",
    description: "Music API documentation with streaming examples and artist data integration guides.",
    image: "/images/examples/tidal-dev.jpg",
    href: "https://developer.tidal.com",
    category: "API Documentation",
    tags: ["Music API", "Streaming", "Entertainment"]
  },
  {
    title: "Block Design System",
    description: "Component library documentation showcasing Block's unified design language and UI components.",
    image: "/images/examples/block-design.jpg",
    href: "#",
    category: "Design System",
    tags: ["Design System", "Components", "UI/UX"]
  },
  {
    title: "Square Terminal Docs",
    description: "Hardware integration documentation for Square Terminal with setup guides and troubleshooting.",
    image: "/images/examples/square-terminal.jpg",
    href: "#",
    category: "Hardware Documentation",
    tags: ["Hardware", "Integration", "Setup"]
  },
  {
    title: "Cash App Card Portal",
    description: "User documentation for Cash App Card features, benefits, and account management.",
    image: "/images/examples/cashapp-card.jpg", 
    href: "#",
    category: "Product Documentation",
    tags: ["Product", "User Guide", "Finance"]
  },
  {
    title: "Block Compliance Hub",
    description: "Regulatory and compliance documentation for financial services and payment processing.",
    image: "/images/examples/block-compliance.jpg",
    href: "#",
    category: "Compliance Documentation", 
    tags: ["Compliance", "Legal", "Finance"]
  },
  {
    title: "Square Marketing Toolkit",
    description: "Marketing resources and brand guidelines for Square partners and merchants.",
    image: "/images/examples/square-marketing.jpg",
    href: "#", 
    category: "Marketing Documentation",
    tags: ["Marketing", "Brand", "Resources"]
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="relative min-h-[calc(100vh-4rem)]">
    <!-- Background Pattern -->
    <div class="fixed inset-0 bg-grid-slate-200/20 [mask-image:linear-gradient(0deg,rgba(255,255,255,0.5),rgba(255,255,255,0.8))] dark:[mask-image:linear-gradient(0deg,rgba(0,0,0,0.5),rgba(0,0,0,0.8))]"></div>

    <!-- Main Content -->
    <div class="relative mx-auto min-h-[calc(100vh-64px)] max-w-[1800px] py-8 px-6">
      <main class="min-w-0">
        <div class="prose prose-slate dark:prose-invert max-w-none bg-background/80 backdrop-blur-sm rounded-lg p-8">
          
    <CTASection
      title={title}
      tagline="Documentation Showcase"
      taglineIconName="images"
      description="Explore real-world documentation sites built with this project's templates, components, and design system. See how Block teams create exceptional user experiences across different product areas."
      primaryButtonText="Documentation"
      primaryButtonHref="/docs"
      primaryButtonIconName="layers"
      secondaryButtonText="Browse Gallery"
      secondaryButtonHref="#gallery"
      secondaryButtonIconName="file-search"
    />

          {/* Stats Section */}
          <div class="not-prose mb-16">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 text-center">
              <div class="p-6 rounded-lg bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 border border-blue-200 dark:border-blue-800">
                <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">9</div>
                <div class="text-sm font-medium text-blue-700 dark:text-blue-300">Example Sites</div>
                <div class="text-xs text-blue-600/70 dark:text-blue-400/70">Live examples</div>
              </div>
              <div class="p-6 rounded-lg bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 border border-purple-200 dark:border-purple-800">
                <div class="text-3xl font-bold text-purple-600 dark:text-purple-400 mb-2">6</div>
                <div class="text-sm font-medium text-purple-700 dark:text-purple-300">Categories</div>
                <div class="text-xs text-purple-600/70 dark:text-purple-400/70">Different use cases</div>
              </div>
              <div class="p-6 rounded-lg bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 border border-green-200 dark:border-green-800">
                <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2">100%</div>
                <div class="text-sm font-medium text-green-700 dark:text-green-300">Block Powered</div>
                <div class="text-xs text-green-600/70 dark:text-green-400/70">Using this system</div>
              </div>
              <div class="p-6 rounded-lg bg-gradient-to-br from-orange-50 to-orange-100 dark:from-orange-900/20 dark:to-orange-800/20 border border-orange-200 dark:border-orange-800">
                <div class="text-3xl font-bold text-orange-600 dark:text-orange-400 mb-2">22</div>
                <div class="text-sm font-medium text-orange-700 dark:text-orange-300">Components Used</div>
                <div class="text-xs text-orange-600/70 dark:text-orange-400/70">From our library</div>
              </div>
            </div>
          </div>
        </div>

        {/* Examples Gallery - Inspired by Figma shadcn Gallery Pro Block */}
        <a name="gallery" />
        <div class="bg-background/80 backdrop-blur-sm rounded-lg p-8 mt-8">
          <div class="max-w-[1280px] mx-auto">
            {/* Section Header */}
            <div class="text-center mb-12">
              <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-medium mb-4">
                Gallery section
              </div>
              <h2 class="text-3xl md:text-4xl font-bold mb-4">
                Documentation Sites in Production
              </h2>
              <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                See how Block teams use this documentation system to create exceptional user experiences across different product areas and use cases.
              </p>
            </div>

            {/* Gallery Grid */}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {exampleSites.map((site) => (
                <a 
                  href={site.href}
                  class="group relative block overflow-hidden rounded-lg border bg-card hover:shadow-lg transition-all duration-300 hover:shadow-primary/5"
                  target={site.href.startsWith('http') ? '_blank' : '_self'}
                  rel={site.href.startsWith('http') ? 'noopener noreferrer' : ''}
                >
                  {/* Image Container */}
                  <div class="aspect-[16/9] relative overflow-hidden bg-gradient-to-br from-muted/20 to-muted/40">
                    {/* Category Badge */}
                    <div class="absolute top-3 left-3 z-10">
                      <span class="px-2 py-1 text-xs font-medium bg-background/90 backdrop-blur-sm text-foreground rounded-full border">
                        {site.category}
                      </span>
                    </div>
                    
                    {/* Placeholder Image Area */}
                    <div class="absolute inset-0 flex items-center justify-center">
                      <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center group-hover:scale-110 transition-transform">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
                          <rect width="18" height="18" x="3" y="3" rx="2"/>
                          <circle cx="9" cy="9" r="2"/>
                          <path d="M21 15l-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
                        </svg>
                      </div>
                    </div>
                    
                    {/* External Link Icon */}
                    {site.href !== "#" && (
                      <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity">
                        <div class="w-8 h-8 rounded-full bg-background/90 backdrop-blur-sm flex items-center justify-center border">
                          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
                            <path d="M7 7h10v10"/>
                            <path d="M7 17 17 7"/>
                          </svg>
                        </div>
                      </div>
                    )}
                  </div>
                  
                  {/* Content */}
                  <div class="p-6">
                    <h3 class="text-lg font-semibold mb-2 group-hover:text-primary transition-colors">
                      {site.title}
                    </h3>
                    <p class="text-sm text-muted-foreground mb-4 line-clamp-2">
                      {site.description}
                    </p>
                    
                    {/* Tags */}
                    <div class="flex flex-wrap gap-1">
                      {site.tags.slice(0, 3).map((tag) => (
                        <span class="px-2 py-1 text-xs bg-muted/50 text-muted-foreground rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>

        {/* Call to Action */}
        <div class="bg-background/80 backdrop-blur-sm rounded-lg p-8 mt-8">
          <div class="not-prose">
            <div class="bg-gradient-to-r from-primary/10 via-primary/5 to-primary/10 rounded-2xl p-8 md:p-12">
              <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-3xl font-bold mb-4">Ready to Build Your Own?</h2>
                <p class="text-lg text-muted-foreground mb-8">
                  Start with our documentation template and create beautiful, functional sites like the examples above. 
                  Join the Block community and build documentation that your users will love.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                  <a href={getUrlRelativeToBase("/docs/installation")} class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors no-underline">
                    Get Started Now
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ml-2">
                      <path d="M7 7h10v10"/>
                      <path d="M7 17 17 7"/>
                    </svg>
                  </a>
                  <a href="https://github.com/block/docs-site-kickstarter" target="_blank" class="inline-flex items-center justify-center px-6 py-3 rounded-lg border border-border bg-background hover:bg-accent transition-colors no-underline">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="mr-2">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    View on GitHub
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Additional Information */}
        <div class="bg-background/80 backdrop-blur-sm rounded-lg p-8 mt-8">
          <div class="prose prose-slate dark:prose-invert max-w-none">
            <h2>About These Examples</h2>
            <p>
              These documentation sites showcase the versatility and power of our documentation infrastructure. 
              Each site demonstrates different use cases, from API documentation to user guides, all built with 
              the same underlying system but customized for their specific needs.
            </p>

            <h3>Categories Explained</h3>
            <div class="not-prose grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
              <div class="p-4 border rounded-lg bg-card">
                <h4 class="font-semibold mb-2">API Documentation</h4>
                <p class="text-sm text-muted-foreground">
                  Technical documentation for developers, featuring interactive examples, code snippets, and comprehensive API references.
                </p>
              </div>
              <div class="p-4 border rounded-lg bg-card">
                <h4 class="font-semibold mb-2">Product Documentation</h4>
                <p class="text-sm text-muted-foreground">
                  User-focused guides and help documentation for product features, setup instructions, and troubleshooting.
                </p>
              </div>
              <div class="p-4 border rounded-lg bg-card">
                <h4 class="font-semibold mb-2">Design System</h4>
                <p class="text-sm text-muted-foreground">
                  Component libraries and design guidelines showcasing UI patterns, usage examples, and implementation details.
                </p>
              </div>
              <div class="p-4 border rounded-lg bg-card">
                <h4 class="font-semibold mb-2">Business Documentation</h4>
                <p class="text-sm text-muted-foreground">
                  Integration guides and business-focused documentation for partners, merchants, and enterprise users.
                </p>
              </div>
            </div>

            <h3>Submit Your Example</h3>
            <p>
              Built something amazing with our documentation system? We'd love to feature it! 
              <a href="https://github.com/block/docs-site-kickstarter/issues/new" target="_blank" class="text-primary hover:underline">
                Submit your site
              </a> for consideration in our examples gallery.
            </p>
          </div>
        </div>
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  /* Background grid pattern */
  .bg-grid-slate-200\/20 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(148 163 184 / 0.2)'%3e%3cpath d='M0 .5H31.5V32'/%3e%3c/svg%3e");
  }

  @media (prefers-color-scheme: dark) {
    .bg-grid-slate-200\/20 {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(148 163 184 / 0.1)'%3e%3cpath d='M0 .5H31.5V32'/%3e%3c/svg%3e");
    }
  }

  /* Line clamp utility */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
