---

import ContentSection from '@/components/block/ContentSection.astro';
import Icon from './Icon.astro';

interface Props {
  title: string;
  href: string;
  description: string;
}

const { 
  title,
  href,
  description
} = Astro.props;
---

<ContentSection
    hasDefaultInnerStyles={false}>
    <a
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        class="governance-card group h-full py-8 flex items-center justify-between no-underline transition-colors duration-200 cursor-pointer"
    >
        <div class="flex-1 mr-9 grid grid-cols-[200px_1fr] gap-10 items-center py-2">
            <h4 class="governance-text text-left mt-0 mb-0 transition-colors duration-200">
                {title}
            </h4>
            <h4 class="governance-text font-normal mt-0 mb-0 transition-colors duration-200">
                {description}
            </h4>
        </div>
        <div class="governance-icon flex-shrink-0 transition-transform duration-200 group-hover:scale-120">
            <Icon name="arrow-right" />
        </div>
    </a>
</ContentSection>
