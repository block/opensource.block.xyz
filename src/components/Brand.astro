---
import { getUrlRelativeToBase } from "@/lib/utils"
import Icon from "@/components/block/Icon.astro"
---

<!-- Logo/Brand -->
<a href={getUrlRelativeToBase("/")} class="brand-link">
  <div class="brand-content">
    <div class="brand-icon">
      <Icon name="block-open-source/block" />
    </div>
    <span class="brand-text whitespace-nowrap">Block Open Source</span>
  </div>
</a>

<style>

  /* Brand Styling */
  .brand-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .brand-link:hover {
    opacity: 0.8;
  }

  .brand-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .brand-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    color: hsl(var(--primary));
    transition: color 0.2s ease;
  }

  .brand-link:hover .brand-icon {
    color: hsl(var(--muted-background));
  }

  .brand-text {
    font-weight: 400;
    font-size: 1.25rem;
    color: hsl(var(--foreground));
  }

</style>